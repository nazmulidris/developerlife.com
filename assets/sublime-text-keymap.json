[
  {
    "keys": ["ctrl+j"],
    "command": "select_lines",
    "args": { "forward": true }
  },
  {
    "keys": ["alt+right"],
    "command": "next_view"
  },
  {
    "keys": ["alt+left"],
    "command": "prev_view"
  },
  {
    "keys": ["ctrl+w"],
    "command": "expand_region"
  },
  {
    "keys": ["ctrl+\\"],
    "command": "toggle_side_bar"
  },
  {
    "keys": ["ctrl+;"],
    "command": "close"
  },

  // Cursor control (alt)

  {
    "keys": ["alt+;"],
    "command": "move",
    "args": {
      "by": "characters",
      "forward": false
    }
  },
  {
    "keys": ["alt+'"],
    "command": "move",
    "args": {
      "by": "characters",
      "forward": true
    }
  },
  {
    "keys": ["alt+k"],
    "command": "move",
    "args": {
      "by": "lines",
      "forward": false
    }
  },
  {
    "keys": ["alt+l"],
    "command": "move",
    "args": {
      "by": "lines",
      "forward": true
    }
  },
  {
    "keys": ["end"], // No longer alt+[
    "command": "move_to",
    "args": {
      "to": "eol",
      "extend": false
    }
  },
  {
    "keys": ["home"], // no longer alt+]
    "command": "move_to",
    "args": {
      "to": "bol",
      "extend": false
    }
  },

  // Cursor control (super).

  {
    "keys": ["super+;"],
    "command": "move",
    "args": {
      "by": "characters",
      "forward": false
    }
  },
  {
    "keys": ["super+'"],
    "command": "move",
    "args": {
      "by": "characters",
      "forward": true
    }
  },
  {
    "keys": ["super+k"],
    "command": "move",
    "args": {
      "by": "lines",
      "forward": false
    }
  },
  {
    "keys": ["super+l"],
    "command": "move",
    "args": {
      "by": "lines",
      "forward": true
    }
  },
  {
    "keys": ["super+]"],
    "command": "move_to",
    "args": {
      "to": "eol",
      "extend": false
    }
  },
  {
    "keys": ["super+["],
    "command": "move_to",
    "args": {
      "to": "bol",
      "extend": false
    }
  },

